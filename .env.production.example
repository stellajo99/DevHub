# DevHub Production Environment Configuration Template
# Copy this file to .env.production and update with your actual production values

# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration - Production MongoDB
MONGODB_URI=mongodb://prod_user:secure_password@mongodb-server:27017/devhub_prod?authSource=admin
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=secure_root_password

# Redis Configuration - Production Redis
REDIS_URL=redis://redis-server:6379

# JWT Configuration - Use strong production secrets
JWT_SECRET=production-super-secret-jwt-key-minimum-64-characters-very-secure-random
JWT_EXPIRES_IN=24h

# CORS Configuration - Production domain
CORS_ORIGIN=https://devhub.yourdomain.com

# Rate Limiting - More generous for production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Logging Configuration - Less verbose for production
LOG_LEVEL=warn

# Trust Proxy - Enable for production load balancer
TRUST_PROXY=true

# Email Configuration - Production SMTP
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=secure_email_password
SMTP_FROM=DevHub <noreply@yourdomain.com>

# File Upload Configuration - Production limits
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Security Configuration - Higher security for production
BCRYPT_ROUNDS=14
SESSION_SECRET=production-session-secret-very-secure-random-string

# Monitoring Configuration - Production monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PREFIX=devhub_prod

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# Database Backup Configuration - Production backup schedule
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=devhub-backups
BACKUP_S3_REGION=us-east-1

# Docker Build Arguments
APP_VERSION=1.0.0
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=main

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/devhub.crt
SSL_KEY_PATH=/etc/ssl/private/devhub.key

# External Service Configuration
CDN_URL=https://cdn.yourdomain.com
S3_BUCKET=devhub-assets
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Third-party Service API Keys
GITHUB_CLIENT_ID=prod_github_client_id
GITHUB_CLIENT_SECRET=prod_github_client_secret

# Feature Flags - Production settings
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=1024
CLUSTER_WORKERS=2

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="DevHub is currently under maintenance. Please check back soon."